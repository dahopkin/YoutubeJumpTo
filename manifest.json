{
  "manifest_version": 2,
  "author": "Daniel Hopkins",
  "name": "YouTube Spot Finder",
  "description": "Find the spot you want in a YouTube video and save spots for later.",
  "version": "1.0.00",
  "page_action": {
    "default_icon": "images/yjt_icon.png",
    "default_title": "YouTube Spot Finder",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [ "js/eventPage.js" ],
    "persistent": false
  },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": [ "*://*.youtube.com/*", "*://*.netflix.com/watch/*", "*://*.hulu.com/watch/*" ],
      "js": [ "js/jquery-3.3.1.min.js"
        , "js/common.js"
        , "js/binarySearcher.js"
        , "js/bookmarksModule.js"
        , "js/idSource.js"
        , "js/actionResult.js"
        , "js/youtubejt_cs.js"
        , "js/ui-inject.js" ],
      "css": ["css/ui.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs", "activeTab", "downloads",
    "storage",
     "*://*.youtube.com/*",
     "*://*.netflix.com/watch/*",
     "*://*.hulu.com/watch/*"
    ],
    "web_accessible_resources": [
      "html/ui-inject.html"
    ]


}